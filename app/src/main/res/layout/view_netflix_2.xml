<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_netflix_logo"
            android:layout_marginLeft="5dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/programs"
            android:textColor="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/films"
            android:textColor="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list"
            android:textColor="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/gray"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/populars"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image01"
                android:layout_width="147dp"
                android:layout_height="114dp"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image02"
                android:layout_width="147dp"
                android:layout_height="114dp"
                android:layout_marginStart="-28dp"
                android:layout_toEndOf="@id/image01"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image03"
                android:layout_width="147dp"
                android:layout_height="114dp"
                android:layout_marginStart="-28dp"
                android:layout_toEndOf="@id/image02"
                tools:src="@tools:sample/avatars" />
                />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trends"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image05"
                android:layout_width="147dp"
                android:layout_height="114dp"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image06"
                android:layout_width="147dp"
                android:layout_height="114dp"
                android:layout_marginStart="-28dp"
                android:layout_toEndOf="@id/image05"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image07"
                android:layout_width="147dp"
                android:layout_height="114dp"
                android:layout_marginStart="-28dp"
                android:layout_toEndOf="@id/image06"
                tools:src="@tools:sample/avatars" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_again"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image08"
                android:layout_width="147dp"
                android:layout_height="114dp"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image09"
                android:layout_width="147dp"
                android:layout_height="114dp"
                android:layout_marginStart="-28dp"
                android:layout_toEndOf="@id/image08"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image10"
                android:layout_width="147dp"
                android:layout_height="114dp"
                android:layout_marginStart="-28dp"
                android:layout_toEndOf="@id/image09"
                tools:src="@tools:sample/avatars" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home_white_24dp"
            android:layout_marginLeft="20dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search_white_24dp"
            android:layout_marginLeft="30dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_smart_display_white_24dp"
            android:layout_marginLeft="30dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_file_download_white_24dp"
            android:layout_marginLeft="30dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_marginLeft="30dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>