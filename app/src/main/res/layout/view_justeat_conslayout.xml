<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_image1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tapa1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_res1"
        style="@style/logo_style"
        android:src="@drawable/casameranilogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_image1" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_res1">

        <TextView
            android:id="@+id/title_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rest_1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/res_food1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_res" />

        <TextView
            android:id="@+id/res_deliver1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deliver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/res_food1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_loc1"
            style="@style/margins_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/res_dist1"
            app:layout_constraintTop_toBottomOf="@id/res_deliver1" />

        <TextView
            android:id="@+id/res_dist1"
            style="@style/margins_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance"
            app:layout_constraintStart_toEndOf="@id/ic_loc1"
            app:layout_constraintTop_toBottomOf="@id/res_deliver1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_clock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clock_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/res_time1"
            app:layout_constraintTop_toBottomOf="@id/ic_loc1" />

        <TextView
            android:id="@+id/res_time1"
            style="@style/margins_second_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            app:layout_constraintStart_toEndOf="@id/ic_clock1"
            app:layout_constraintTop_toBottomOf="@id/res_dist1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_res"
            style="@style/margins_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_res"
            android:textColor="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/res_deliver1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Estrellas -->
        <TextView
            android:id="@+id/res_rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rating"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/new_res"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/star_margin_top"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star1"
            style="@style/img_stars"
            android:src="@drawable/ic_star_border_yellow_24dp"
            app:layout_constraintTop_toBottomOf="@id/new_res"
            app:layout_constraintEnd_toStartOf="@id/res_rating1"
            android:layout_marginTop="@dimen/star_margin_top"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star2"
            style="@style/img_stars"
            android:src="@drawable/ic_star_yellow_24dp"
            app:layout_constraintTop_toBottomOf="@id/new_res"
            app:layout_constraintEnd_toStartOf="@id/res1_star1"
            android:layout_marginTop="@dimen/star_margin_top"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star3"
            style="@style/img_stars"
            android:src="@drawable/ic_star_yellow_24dp"
            app:layout_constraintTop_toBottomOf="@id/new_res"
            app:layout_constraintEnd_toStartOf="@id/res1_star2"
            android:layout_marginTop="@dimen/star_margin_top"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star4"
            style="@style/img_stars"
            android:src="@drawable/ic_star_yellow_24dp"
            app:layout_constraintTop_toBottomOf="@id/new_res"
            app:layout_constraintEnd_toStartOf="@id/res1_star3"
            android:layout_marginTop="@dimen/star_margin_top"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star5"
            style="@style/img_stars"
            android:src="@drawable/ic_star_yellow_24dp"
            app:layout_constraintTop_toBottomOf="@id/new_res"
            app:layout_constraintEnd_toStartOf="@id/res1_star4"
            android:layout_marginTop="@dimen/star_margin_top"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>