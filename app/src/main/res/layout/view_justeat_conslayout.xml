<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_image1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/tapa1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_res1"
        style="@style/logo_style"
        tools:src="@drawable/casameranilogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_image1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/promo_res1"
        style="@style/promo_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray_dif"
        tools:text="@string/promo"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/lay_desc_rest1"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/text_padding"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_desc_rest1"
        style="@style/lay_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_res1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/rest_1"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/text_padding"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/res_food1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/food"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_res"
            android:padding="@dimen/text_padding"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/res_deliver1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/deliver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/res_food1"
            android:padding="@dimen/text_padding"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_loc1"
            style="@style/margins_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_location_on_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/res_dist1"
            app:layout_constraintTop_toBottomOf="@id/res_deliver1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/res_dist1"
            style="@style/margins_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/distance"
            app:layout_constraintStart_toEndOf="@id/ic_loc1"
            app:layout_constraintTop_toBottomOf="@id/res_deliver1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_clock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_clock_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/res_time1"
            app:layout_constraintTop_toBottomOf="@id/ic_loc1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/res_time1"
            style="@style/margins_second_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/time"
            app:layout_constraintStart_toEndOf="@id/ic_clock1"
            app:layout_constraintTop_toBottomOf="@id/res_dist1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_res"
            style="@style/margins_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/new_res"
            android:textColor="@color/teal_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/res_deliver1" />

        <!-- Estrellas -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/res_rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/star_margin_top"
            tools:text="@string/rating"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_res" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star1"
            style="@style/img_stars"
            android:layout_marginTop="@dimen/star_margin_top"
            tools:src="@drawable/ic_star_border_yellow_24dp"
            app:layout_constraintEnd_toStartOf="@id/res_rating1"
            app:layout_constraintTop_toBottomOf="@id/new_res" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star2"
            style="@style/img_stars"
            android:layout_marginTop="@dimen/star_margin_top"
            tools:src="@drawable/ic_star_yellow_24dp"
            app:layout_constraintEnd_toStartOf="@id/res1_star1"
            app:layout_constraintTop_toBottomOf="@id/new_res" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star3"
            style="@style/img_stars"
            android:layout_marginTop="@dimen/star_margin_top"
            tools:src="@drawable/ic_star_yellow_24dp"
            app:layout_constraintEnd_toStartOf="@id/res1_star2"
            app:layout_constraintTop_toBottomOf="@id/new_res" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star4"
            style="@style/img_stars"
            android:layout_marginTop="@dimen/star_margin_top"
            tools:src="@drawable/ic_star_yellow_24dp"
            app:layout_constraintEnd_toStartOf="@id/res1_star3"
            app:layout_constraintTop_toBottomOf="@id/new_res" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/res1_star5"
            style="@style/img_stars"
            android:layout_marginTop="@dimen/star_margin_top"
            tools:src="@drawable/ic_star_yellow_24dp"
            app:layout_constraintEnd_toStartOf="@id/res1_star4"
            app:layout_constraintTop_toBottomOf="@id/new_res" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>