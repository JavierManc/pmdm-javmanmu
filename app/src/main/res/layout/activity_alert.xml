<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/alert_card_corner_radius">

    <include
        android:id="@+id/alert_list_custom_toolbar"
        layout="@layout/alert_list_custom_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_alerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/alert_card_margin"
        card_view:layout_constraintTop_toBottomOf="@id/alert_list_custom_toolbar"
        tools:listitem="@layout/alert_info_item" />

</androidx.constraintlayout.widget.ConstraintLayout>