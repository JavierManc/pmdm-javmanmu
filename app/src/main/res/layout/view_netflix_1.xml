<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!--https://fonts.google.com/icons?icon.query=down-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_help_black_24dp"
            android:layout_marginLeft="5dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/gray"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image01"
                android:layout_width="147dp"
                android:layout_height="114dp"
                tools:src="@tools:sample/avatars"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem"
                android:maxLines="1"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/image01"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/ic_done_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/title1"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="170dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image01"
                android:layout_below="@id/title1"
                android:textColor="@color/white"
                tools:text="@tools:sample/lorem"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image02"
                android:layout_width="147dp"
                android:layout_height="114dp"
                tools:src="@tools:sample/avatars"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem"
                android:maxLines="1"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/image02"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@id/title2"
                android:src="@drawable/ic_get_app_black_24dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image02"
                android:layout_below="@id/title2"
                android:textColor="@color/white"
                tools:text="@tools:sample/lorem"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image03"
                android:layout_width="147dp"
                android:layout_height="114dp"
                tools:src="@tools:sample/avatars"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem"
                android:maxLines="1"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/image03"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/ic_done_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/title3"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="35dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image03"
                android:layout_below="@id/title3"
                android:textColor="@color/white"
                tools:text="@tools:sample/lorem"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                />
        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home_white_24dp"
            android:layout_marginLeft="20dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search_white_24dp"
            android:layout_marginLeft="30dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_smart_display_white_24dp"
            android:layout_marginLeft="30dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_file_download_white_24dp"
            android:layout_marginLeft="30dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_marginLeft="30dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>